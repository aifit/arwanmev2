---
layout: layouts/base.njk
---

<div class="c-post c-post--porto">

	<h2 class="c-post__title">
		{{ title }}
	</h2>

	<div class="c-post__meta">
		{%- for tag in tags | filterTagList %}
		{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
		<div class="c-post__tag">
			<div class="c-post__tag-icon">
				{% include "icons/code.njk" %}
			</div>
			<div class="c-post__tag-text">
				Stack
			</div>
			<div class="c-post__tag-link">
				<a href="{{ tagUrl }}">{{ tag }}</a>
			</div>
			{%- if not loop.last %} {% endif %}
		</div>
		{%- endfor %}
	</div>

	<div class="c-post__content">
		{{ content | safe }}
	</div>

	<div class="c-post__meta">
		<div class="c-post__tag">
			{% if 'GitHub' in storage %}
				<div class="c-post__tag-icon">
					{% include "icons/github.njk" %}
				</div>
				<div class="c-post__tag-text">
					View on
				</div>
			{% else %}
				<div class="c-post__tag-icon">
					{% include "icons/file.njk" %}
				</div>
				<div class="c-post__tag-text">
					View
				</div>
			{% endif %}
			<div class="c-post__tag-link">
				<a href="{{ preview }}" target="_blank" rel="nofollow">
					{{ storage }}
				</a>
			</div>
		</div>
	</div>
</div>

{%- if collections.porto %}
{%- set previousPost = collections.porto | getPreviousCollectionItem %}
{%- set nextPost = collections.porto | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="c-postnav">
	{%- if previousPost %}
	<div class="c-postnav__prev">
		<a class="c-postnav__link" href="{{ previousPost.url }}">
			<div class="c-postnav__icon">
				{% include "icons/arrow-left.njk" %}
			</div>
			Prev
		</a>
	</div>
	{% endif %}
	{%- if nextPost %}
	<div class="c-postnav__next">
		<a class="c-postnav__link" href="{{ nextPost.url }}">
			Next
			<div class="c-postnav__icon">
				{% include "icons/arrow-right.njk" %}
			</div>
		</a>
	</div>
	{% endif %}
</div>
{%- endif %}
{%- endif %}

