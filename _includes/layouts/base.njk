<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="{{ '/favicon.png' | url }}" rel="icon" type="image/png">
  	<title>{{ title }}{% if title and metadata.author.name %} | {% endif %}{{ metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">
				<link rel="canonical" href="https://arwan.me{{ page.url }}" />
    {%- css %}
    	{% include "public/css/index.css" %}
    {% endcss %}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,300;1,300&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Hanken+Grotesk:ital,wght@0,400;0,500;0,600;1,400;1,500;1,600&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;700&display=swap" rel="stylesheet">
    <style>
  		{% getBundle "css" %}
		</style>
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ metadata.title }}" />
    <meta property="og:description" content="{{ metadata.description }}" />
    <meta property="og:url" content="https://arwan.me/" />
    <meta property="og:site_name" content="{{ metadata.title }}" />
    <meta property="fb:app_id" content="899392273777724" />
    <meta property="og:image" content="{{ '/sharer.png' | url }}" />
    <meta property="og:image:secure_url" content="{{ '/sharer.png' | url }}" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:description" content="{{ metadata.description }}" />
    <meta name="twitter:title" content="{{ metadata.title }}" />
    <meta name="twitter:site" content="" />
    <meta name="twitter:image" content="{{ '/sharer.png' | url }}" />
  </head>
  <body>
		<a href="#skip" class="visually-hidden">Skip to main content</a>

		{% include "header.njk" %}

    <main id="skip" class="c-body">
			{{ content | safe }}
    </main>

		{% include "footer.njk" %}

  </body>

	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-R7T9E6E9C4"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-R7T9E6E9C4');
	</script>
</html>
