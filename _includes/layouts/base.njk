<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="theme-color" content="#252525">
		<link href="{{ '/favicon.png' | url }}" rel="icon" type="image/png">
  	<title>{{ title }}{% if title and metadata.author.name %} | {% endif %}{{ metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">
    {%- css %}
    	{% include "public/css/index.css" %}
    {% endcss %}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,300;1,300&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Hanken+Grotesk:ital,wght@0,400;0,500;0,600;1,400;1,500;1,600&display=swap" rel="stylesheet">
    <style>
  		{% getBundle "css" %}
		</style>
  </head>
  <body>
		<a href="#skip" class="visually-hidden">Skip to main content</a>

		{% include "header.njk" %}

    <main id="skip" class="c-body">
			{{ content | safe }}
    </main>

		{% include "footer.njk" %}

  </body>
</html>
